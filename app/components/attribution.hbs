<audio src="/yeah.opus" preload="none" {{on-insert this.setAudioElement}}></audio>

<div class="attribution column gap-half align-center" ...attributes>
  <div class="text-xs">
    {{t "site-made-by"}}
    <a
      href="https://robert.huseli.us/"
      class="font-weight-bold"
      target="_blank"
      rel="noopener noreferrer"
      {{on "mouseenter" this.onMouseEnter}}
    >Robert</a>
  </div>
  <div class="text-xs font-weight-bold cursor-pointer" {{on "click" this.onCookiesClick}}>{{t "cookies.question"}}</div>
</div>
{{#if this.showFlash}}
  <div class="flash-overlay" {{on "animationend" this.onFlashAnimationEnd}}></div>
{{/if}}
