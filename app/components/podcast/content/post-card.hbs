<article class="podcast-content-card post" ...attributes>
  <div class="podcast-content-card-contents">
    <div class="row align-center gap-half">
      {{#if @expand}}
        <div class="row align-center gap-single fill p-single">
          <Podcast::Content::PostCard::Head @post={{@post}} />
        </div>
      {{else}}
        <LinkTo @route={{@post.route}} @models={{@post.routeModels}} class="row align-center gap-single fill p-single">
          <Podcast::Content::PostCard::Head @post={{@post}} />
        </LinkTo>
      {{/if}}

      <div class="row align-center gap-half px-single">
        {{#if @expand}}
          <span
            class="material-symbols icon text-secondary hover-light py-single share-icon"
            role="button"
            title="{{t 'share.share'}}"
            {{on "click" this.openShareModal}}
          >share</span>
        {{/if}}
      </div>
    </div>

    {{yield}}
  </div>
</article>

{{#if this.showShareModal}}
  <Podcast::Content::ShareModal @on-close={{this.closeShareModal}} @url={{@post.frontendUrl}} />
{{/if}}
