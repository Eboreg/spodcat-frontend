<aside class="gap-half column" ...attributes>
  <Button
    @href={{@podcast.episodes-fm-url}}
    @new-tab={{true}}
    @theme="tertiary"
    @material-icon="podcasts"
    title="{{t 'add-x-in-app' x=@podcast.name}}"
  >
    <span class="label">{{t "subscribe"}}</span>
  </Button>
  <Button @href={{@podcast.rss-url}} @new-tab={{true}} @theme="primary" @material-icon="rss_feed">
    <span class="label">{{t "rss-feed"}}</span>
  </Button>
  {{#each @podcast.links.content as |link|}}
    <Button @href={{link.url}} @new-tab={{true}} @theme={{link.theme}}>
      {{#if link.custom-icon}}
        <img src={{link.custom-icon}} alt="" class="icon" />
      {{else if link.faIcon}}
        <FaIcon @icon={{link.faIcon}} class="icon" />
      {{/if}}
      <span class="label">{{link.label}}</span>
    </Button>
  {{/each}}

  {{#if this.showIndexLink}}
    <Button @route="home" @theme="secondary" @material-icon="home">
      <span class="label">{{t "all-podcasts"}}</span>
    </Button>
  {{/if}}

  <Button @on-click={{this.openSearchModal}} @theme="secondary" @material-icon="search">
    <span class="label">{{t "search"}}</span>
  </Button>

  <SearchModal @on-dismiss-request={{this.closeSearchModal}} @open={{this.isSearchModalOpen}} />

  <Attribution class="d-none d-md-flex" />

  {{yield}}
</aside>
