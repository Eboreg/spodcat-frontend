<div class="pos-relative" {{on-outside-click this.onOutsideClick}}>
  <span
    class="material-symbols button {{this.buttonClass}}"
    role="button"
    {{on "click" this.onTriggerButtonClick}}
    title="{{t 'change-playback-rate-x' x=this.currentLabel}}"
  >settings_timelapse</span>

  {{#if this.popupVisible}}
    <Popup class="pb-half">
      <div class="popup-header">{{t "playback-rate"}}</div>
      {{#each this.playbackRates as |rate|}}
        <div class="popup-row" {{on "click" (fn this.onRateClick rate.rate)}}>
          <div class="popup-row-check">
            {{#if (eq rate.rate this.audio.playbackRate)}}
              <span class="material-symbols">check</span>
            {{/if}}
          </div>
          <div class="popup-row-label">{{rate.label}}</div>
        </div>
      {{/each}}
    </Popup>
  {{/if}}
</div>
