{{#if this.isSingleton}}
  {{page-title this.singleton.name replace=true}}
  <Podcast::Index @podcast={{this.singleton}} />
{{else}}
  {{page-title this.siteName replace=true}}
  <main class="content-width column gap-half podcast-list">
    <h3 class="my-half font-weight-normal outlined-text">{{t "choose-a-podcast"}}:</h3>
    {{#each @model as |podcast|}}
      <Podcast::Banner @podcast={{podcast}} />
    {{/each}}
  </main>
{{/if}}
